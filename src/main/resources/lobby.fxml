<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/19.0.2" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.gui.controllers.LobbyController">
    <top>
        <HBox spacing="10" padding="10">
            <Label text="Chinese Checkers Lobby" style="-fx-font-size: 24px; -fx-font-weight: bold;" />
        </HBox>
    </top>
    <center>
        <VBox spacing="10" padding="10">
            <Label text="Available Games:" style="-fx-font-size: 18px;" />
            <ListView fx:id="gamesListView" prefHeight="200" />
        </VBox>
    </center>
    <bottom>
        <HBox spacing="10" padding="10" alignment="center">
            <Button text="Refresh" onAction="#handleRefresh" prefWidth="100" />
            <Button text="Create Game" onAction="#handleCreateGame" prefWidth="100" />
            <Button text="Join Game" onAction="#handleJoinGame" prefWidth="100" />
        </HBox>
    </bottom>
</BorderPane>
